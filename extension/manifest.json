{
  "manifest_version": 3,
  "name": "Voila Shopper Panel",
  "version": "1.0.0",
  "description": "Opens the Voila Shopper panel",
  "action": {
    "default_title": "Voila Shopper",
    "default_panel": "panel/dist/index.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "panel/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["panel/dist/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}