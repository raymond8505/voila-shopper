{
  "manifest_version": 3,
  "name": "Voila Shopper",
  "version": "1.0.0",
  "description": "Loads client/dist/client.js as a content script.",
  "permissions": [],
  "host_permissions": [
    "<all_urls>"
  ],
   "action": {
    "default_title": "Open Shopper Dashboard"
  },
  "background": {
    "service_worker": "client/dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://voila.ca/*"],
      "js": ["client/dist/attach.js"],
      "run_at": "document_end",
      "type":"module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["client/dist/dispatchInitialState.js","client/dist/client.js","client/dist/chunk/*.js"], 
      "matches": ["https://voila.ca/*"] ,
      "type":"module"
    },
    {
      "resources": ["client/dist/dashboard/index.html","client/dist/dashboard.js"],
      "matches": ["<all_urls>"]
    }
  ]
}