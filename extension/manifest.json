{
  "manifest_version": 3,
  "name": "Voila Shopper",
  "version": "1.0.0",
  "description": "Loads client/dist/client.js as a content script.",
  "permissions": [],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://voila.ca/*"],
      "js": ["client/dist/client.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["client/dist/dispatchInitialState.js"], 
      "matches": ["https://voila.ca/*"] 
    }
  ]
}